{
  "name": "scannio-electron-app",
  "version": "1.0.0",
  "description": "A basic Electron app setup.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder"
  },
  "build": {
    "appId": "com.pawix.scannio",
    "productName": "Scannio",
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "worker.js",
      "index.html",
      "styles.css",
      "node_modules/",
      "build/run_ocr/run_paddleocr.py"
    ],
    "directories": {
      "output": "dist"
    }
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@hyzyla/pdfium": "^2.1.9",
    "@mistralai/mistralai": "^1.7.4",
    "electron-store": "^10.1.0",
    "epub-gen": "^0.1.0",
    "node-fetch": "^2.7.0",
    "pdfjs-dist": "^4.2.67",
    "sharp": "^0.34.3",
    "tesseract.js": "^6.0.1"
  }
}
